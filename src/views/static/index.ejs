                      <p class="card-text">
                          <a href="/preferences" class="btn btn-primary btn-lg" role="button">Make An Impact!</a>
                      </p>
                  </section>
                </section>
                <!-- End Row-->
              </section>
            </main>
            <!-- End Container-->

            <% include ./partials/baseScripts.ejs %>
